@page
<html lang="en">
     <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <title>Hello, world!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    <body>
    <div class="container">
        <div class="row py-3">
            <div class="opponent-stack">
                <span id="opponentStackCt">Opponent Stack: 20 cards</span>
            </div>
            <div class="opponent-hand text-center" height="300px">
                <img id="oppCard1" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="oppCard2" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="oppCard3" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="oppCard4" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="oppCard5" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
            </div>
        </div>
        <div class="row py-3">
            <div class="playAgainRow text-center">
                <input type="button" class="btn btn-success" id="playAgainButton" value="Play Again?"/>
            </div>
        </div>    
        <div class="row">
            <div class="playingField text-center">
                <img id="exStack1" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="playStack1" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="playStack2" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="exStack2" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <h5 id="result" class="d-none">Hello</h5>
            </div>
        </div>
        <div class="row pt-3">
            <div class="stuckRow text-center">
                <input type="button" id="stuckBtn" class="px-3 btn btn-primary" value="Stuck?" />
            </div>
        </div>
        <div class="row py-3">
            <div class="player-hand text-center">
                <img id="playerCard1" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="playerCard2" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="playerCard3" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="playerCard4" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
                <img id="playerCard5" class="px-1" height="100%" width="15%" src="~/img/back.png"/>
            </div>
            <div class="player-stack">
                <span id="playerStackCt">Your Stack: 20 cards</span>
            </div>
        </div>
        <div class="row pt-3">
            <div class="text-center">
                <input type="button" class="btn btn-success" id="playButton" value="Play" />
            
            </div>
        </div>
    </div>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/game.js"></script>
    </body>
</html>